<Window x:Class="WpfDataBase.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataBase"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" FontSize="18" Background="Azure">
    <Border Background="Gray" CornerRadius="30" Margin="30">
        <StackPanel Margin="30">
            <Label Content="Login" Foreground="White" FontSize="35" HorizontalAlignment="Center"/>
            <Separator />
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUserName" Background="LightGray" Foreground="White" />
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="LightGray" Foreground="White"/>
            <Button Name="btnSubmit" Content="Submit" Click="btnSubmit_Click" Margin="250 20" Background="LightGray" Foreground="White" FontSize="28"/>
        </StackPanel>
    </Border>
    
</Window>
